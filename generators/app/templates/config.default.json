{
  "host": "localhost",
  "port": 3030,<% if(database.name === 'mongodb'){ %>
  "mongodb": "mongodb://localhost:27017/<%= databaseName %>",<% } else if(database.name === 'mariadb'){ %>
  "mariadb": "mariadb://root:@localhost:3306/<%= databaseName %>",<% } else if(database.name === 'mssql'){ %>
  "mssql": "mssql://root:@localhost:1433/<%= databaseName %>",<% } else if(database.name === 'mysql'){ %>
  "mysql": "mysql://root:@localhost:3306/<%= databaseName %>",<% } else if(database.name === 'postgres'){ %>
  "postgres": "postgres://postgres:@localhost:5432/<%= databaseName %>",<% } else if(database.name === 'nedb'){ %>
  "nedb": "../data/",<% } else if(database.name === 'sqlite'){ %>
  "sqlite": "../data/<%= databaseName %>.sqlite",<% } %>
  "public": "../public/"<% if (localAuth || authentication.length) { %>,
  "auth": {<% if (database.name !== 'nedb' && database.name !== 'mongodb') { %>
    "idField": "id",<% } %>
    "token": {
      "secret": "<%= secret %>"
    }<% if (localAuth) { %>,
    "local": {}<% } else { %>,
    "local": false<% } %><% for (var i = 0; i < authentication.length; i++) { %>,
    "<%= authentication[i].name %>": {
      "clientID": "your <%= authentication[i].name %> client id",
      "clientSecret": "your <%= authentication[i].name %> client secret",
      "permissions": {
        "scope": [<% for (var j=0; j < authentication[i].permissions.scope.length; j++) { %>"<%= authentication[i].permissions.scope[j]%>"<% if (j !== authentication[i].permissions.scope.length - 1) { %>,<% }} %>]
      }
    }<% } %>
  }<% } %><% if (cors === 'whitelisted') { %>,
  "corsWhitelist": [<% (corsWhitelist || []).map(function(current) { return current.trim(); }).join(', ') %>]<% } %>
}
