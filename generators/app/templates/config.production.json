{
  "host": "<%=name%>-app.feathersjs.com",
  "port": 80,<% if(database.name === 'mongodb'){ %>
  "mongodb": "DATABASE_URL",<% } else if(database.name === 'mariadb'){ %>
  "mariadb": "DATABASE_URL",<% } else if(database.name === 'mssql'){ %>
  "mssql": "DATABASE_URL",<% } else if(database.name === 'mysql'){ %>
  "mysql": "DATABASE_URL",<% } else if(database.name === 'postgres'){ %>
  "postgres": "DATABASE_URL",<% } else if(database.name === 'nedb'){ %>
  "nedb": "NEDB_BASE_PATH",<% } else if(database.name === 'sqlite'){ %>
  "sqlite": "SQLITE_DB",<% } %>
  "public": "../public/"<% if (localAuth || authentication.length) { %>,
  "auth": {<% if (database.name !== 'nedb' && database.name !== 'mongodb') { %>
    "idField": "id",<% } %>
    "token": {
      "secret": "FEATHERS_AUTH_SECRET"
    }<% if (localAuth) { %>,
    "local": {}<% } else { %>,
    "local": false<% } %><% for (var i = 0; i < authentication.length; i++) { %>,
    "<%= authentication[i].name %>": {
      "clientID": "your <%= authentication[i].name %> client id",
      "clientSecret": "your <%= authentication[i].name %> client secret",
      "permissions": {
        "scope": [<% for (var j=0; j < authentication[i].permissions.scope.length; j++) { %>"<%= authentication[i].permissions.scope[j]%>"<% if (j !== authentication[i].permissions.scope.length - 1) { %>,<% }} %>]
      }
    }<% } %>
  }<% } %>
}
